{
    "include": [
      "src",
      "node_modules/inferno/dist/index.d.ts"
    ],
    "exclude": [
      "src/components/web-workers",
      "node_modules"
    ],
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "outDir": "dist",
      "types": ["d3-selection", "inferno"],
      "moduleResolution": "node",
      "sourceMap": true,
      "jsx": "preserve",
      "baseUrl": "./src",

      "allowSyntheticDefaultImports": true,
		  "preserveConstEnums": true,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "noEmit": true,
      "skipLibCheck": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,

      "paths": {
          "@lib/*": ["lib/*"],
          "@components/*": ["components/*"]
      }
    }
  }