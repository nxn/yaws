{
    "include": [
      "src"
    ],
    "exclude": [
      "src/components/web-workers",
      "node_modules"
    ],
    "compilerOptions": {
      "target": "ES6",
      "module": "ES6",
      "outDir": "dist",
      "types": ["d3-selection"],
      "noImplicitAny": true,
      "sourceMap": true,
      "jsx": "react",
      "baseUrl": "./src",
      "paths": {
          "@lib/*": ["lib/*"],
          "@components/*": ["components/*"]
      }
    }
  }